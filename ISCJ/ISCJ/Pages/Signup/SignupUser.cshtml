@page
@model ISCJ.Pages.Signup.SignupUserModel
@{
    ViewData["Title"] = "SignupUser";
}



@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>User Signup</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    School
                </li>
                <li class="active breadcrumb-item">
                    <strong>Signup</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">First Name:</label>

                    <div class="col-sm-10">
                        <input type="text" placeholder="First Name" autocomplete="off"
                               class="form-control" asp-for="@Model.FirstName" />

                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Last Name:</label>

                    <div class="col-sm-10">
                        <input type="text" placeholder="Last Name" autocomplete="off"
                               class="form-control" asp-for="@Model.LastName" />

                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Email:</label>

                    <div class="col-sm-10">
                        <input type="text" placeholder="Email" autocomplete="off"
                               class="form-control" asp-for="@Model.UserEmail" />

                        <span asp-validation-for="@Model.UserEmail" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Password:</label>

                    <div class="col-sm-10">
                        <input type="password" placeholder="Password" autocomplete="off"
                               class="form-control" asp-for="@Model.Password" />

                        <span asp-validation-for="@Model.Password" class="text-danger"></span>

                    </div>

                </div>
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Confirm Password:</label>

                    <div class="col-sm-10">
                        <input type="password" placeholder="ConfirmPassword" autocomplete="off"
                               class="form-control" asp-for="@Model.ConfirmPassword" />

                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group row" style="text-align: right">
                    <div class="col-sm-12 col-sm-offset-2">
                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Cancel">Cancel</button>

                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Reset">Reset</button>

                        <button class="btn btn-primary btn-sm" type="submit" asp-page-handler="Save">Save</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>

