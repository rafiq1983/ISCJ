@page
@model ISCJ.Pages.ProgramManagement.ViewEditProgramModel

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Student Registration</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    Program Management
                </li>
                <li class="active breadcrumb-item">
                    <strong>Add/Edit Program</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">

                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Program</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Program</label>

                            <div class="col-sm-10">
                                <input asp-for="@Model.ProgramName" />
                                <span asp-validation-for="@Model.ProgramName" class="text-danger"></span>
                            </div>
    
                            <label class="col-sm-2 col-form-label">Description</label>

                            <div class="col-sm-10">
                                <textarea asp-for="ProgramDescription" rows="10" columns="40"></textarea>
                            </div>
                            <input type="submit" class="btn btn-primary btn-sm" value="Save"/>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


