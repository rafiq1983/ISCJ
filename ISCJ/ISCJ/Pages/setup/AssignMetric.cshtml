@page "{entitytype}/{entityid:guid}"
@model ISCJ.Pages.AssignMetric
@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">

    <div class="row wrapper border-bottom white-bg page-heading">

        <div class="col-lg-9">
            <h2>Manage Metrics</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    School
                </li>
                <li class="active breadcrumb-item">
                    <strong>Assign Metrics to @Model.EntityFriendlyName</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div asp-validation-summary="ModelOnly" style="color:red"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">@Model.EntityFriendlyName</label>

                    <div class="col-sm-10">
                        @Model.EntityValue

                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="wrapper border-bottom white-bg">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Metric Name</th>
                    <th>Description </th>


                </tr>
            </thead>
            <tbody>
                @for(int i=0;i<Model.DisplayMetrics.Count;i++)
                {
                <tr>
                    <td><input type="checkbox" asp-for="@Model.SelectedMetrics[i].IsSelected" /> </td>
                    <td>
                        <input type="hidden" value="@Model.DisplayMetrics[i].MetricId"  asp-for="@Model.SelectedMetrics[i].MetricId" />
                        @Model.DisplayMetrics[i].MetricName
                    </td>
                    <td>
                        @Model.DisplayMetrics[i].MetricDescription
                    </td>

                </tr>
                }
            </tbody>

        </table>
        <div class="form-group row" style="text-align: right">
            <div class="col-sm-12 col-sm-offset-2">
                <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Cancel">Cancel</button>

                <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Reset">Reset</button>

                <button class="btn btn-primary btn-sm" type="submit" asp-page-handler="Save">Save</button>
            </div>

        </div>
    </div>
</form>
