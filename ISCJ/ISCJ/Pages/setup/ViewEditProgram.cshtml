@page
@model ISCJ.Pages.ProgramManagement.ViewEditProgramModel

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Student Registration</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    Program Management
                </li>
                <li class="active breadcrumb-item">
                    <strong>Add Program</strong>
                </li>
            </ol>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Add Program</h5>

                    </div>


                    <div class="ibox-content">

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Program Name:</label>

                            <div class="col-sm-10">
                                <input type="text" placeholder="Program Name" class="form-control" asp-for="@Model.ProgramName" />

                                <span asp-validation-for="@Model.ProgramName" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Description:</label>

                            <div class="col-sm-10"><!--TO DO: Use Bootstrap markdown for text area-->
                                <textarea  rows="10" class="md-input" style="resize: none;width:100%" asp-for="@Model.ProgramDescription">                            
</textarea>

                                <span asp-validation-for="@Model.ProgramDescription" class="text-danger"></span>



                            </div>
                        </div>


                        <div class="hr-line-dashed"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row" style="text-align:right">
                    <div class="col-sm-12 col-sm-offset-2">
                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Cancel">Cancel</button>

                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Reset">Reset</button>

                        <button class="btn btn-primary btn-sm" type="submit" asp-page-handler="Save">Save</button>

                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    
    <div class="ibox">
        <div class="ibox-content">

            <table class="table">
                <thead>
                <tr>
                    <th>Program Name</th>
                    <th>Description</th>
               
                </tr>
                </thead>
                <tbody>
                @for (var i = 0; i < Model.ProgramDetails.Count; i++)
                {
                    <tr>
                        <input type="hidden" asp-for="@Model.ProgramDetails[i].ProgramId" value="@Model.ProgramDetails[i].ProgramId"/>

                        <td>@Model.ProgramDetails[i].ProgramName</td>
                        <td>@Html.Raw(Model.ProgramDetails[i].ProgramDescription)</td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>
   
</form>
