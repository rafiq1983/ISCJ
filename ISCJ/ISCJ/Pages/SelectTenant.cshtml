@page
@using Microsoft.CodeAnalysis.CSharp
@model ISCJ.Pages.SelectTenantModel
@{
    ViewData["Title"] = "SelectTenant";
}
<form method="Post">
    <div class="ibox-content">


        <table class="table">
            <thead>
                <tr>

                    <th>Tenant Name</th>

                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Tenants.Count; i++)
                {
                    <tr>
                        <input type="hidden" asp-for="@Model.Tenants[i].TenantId" />
                        <input type="hidden" asp-for="@Model.Tenants[i].OrganizationName" />

                        <td>@Model.Tenants[i].OrganizationName</td>

                        <td>
                            <button class="btn btn-white btn-sm" type="submit" name="btnLoginToTenant" value="@i"
                                    asp-page-handler="SelectTenant">
                                Select
                            </button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>