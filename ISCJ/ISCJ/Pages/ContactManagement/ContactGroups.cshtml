@page
@model ISCJ.Pages.ContactManagement.ContactGroupsModel
@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Add Contact Groups</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    School
                </li>
                <li class="active breadcrumb-item">
                    <strong>Contact Groups</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Group</label>

                    <div class="col-sm-10">
                       <input type="text" asp-for="@Model.GroupName" class="form-control"/>
                        <span asp-validation-for="@Model.GroupName" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row" style="text-align:right">
                    <div class="col-sm-12 col-sm-offset-2">
                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Cancel">Cancel</button>

                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Reset">Reset</button>

                        <button class="btn btn-primary btn-sm" type="submit" asp-page-handler="Save">Save</button>
                    </div>

                </div>

            </div>
        </div>

    </div>

    <div class="wrapper border-bottom white-bg">

        <table class="table">
            <thead>
                <tr>
                    <th>Group Name</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.ContactGroups)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="@group.GroupId" />
                           <a href="ContactsByGroup/@group.GroupId">@group.GroupName</a>
                          
                        </td>
                        
                    </tr>
                }
            </tbody>

        </table>
    </div>
</form>