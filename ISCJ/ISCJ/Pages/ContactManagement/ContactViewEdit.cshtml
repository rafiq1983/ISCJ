@page
@model ContactViewEditModel
@{
  ViewData["Title"] = "Add/Update Contacts";
  Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Contacts</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
      </li>
      <li class="breadcrumb-item">
        Contact Management
      </li>
      <li class="active breadcrumb-item">
        <strong>Add Contact</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox ">
        <div class="ibox-title">
          <h5>Add or Update Contacts</h5>
        
        </div>
        <div class="ibox-content">
          <form method="post" name="frmCreateContact">
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">First Name</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.FirstName" class="form-control" placeholder="First Name">
                <span asp-validation-for="Contact.FirstName" class="text-danger"></span>

              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Last Name</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.LastName" class="form-control" placeholder="Last Name">
                <span asp-validation-for="Contact.LastName" class="text-danger"></span>

              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Middle Initial</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.MiddleName" class="form-control" placeholder="Middle Initial">
                <span asp-validation-for="Contact.MiddleName" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Gender</label>

              <div class="col-sm-10">
                <select class="form-control m-b" asp-for="Contact.Gender">
                  <option value="1">Male</option>
                  <option value="2">Female</option>
                </select>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Gender</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.StreetAddress" class="form-control" placeholder="Street Address">

                <span asp-validation-for="Contact.StreetAddress" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Apt</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.Apt" class="form-control" placeholder="">

                <span asp-validation-for="Contact.Apt" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">City</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.City" class="form-control" placeholder="City">

                <span asp-validation-for="Contact.City" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">State</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.State" class="form-control" placeholder="State">

                <span asp-validation-for="Contact.State" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Zip</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.ZipCode" class="form-control" placeholder="Zip">

                <span asp-validation-for="Contact.ZipCode" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Home Phone</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.HomePhone" class="form-control" placeholder="Home Phone">

                <span asp-validation-for="Contact.HomePhone" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Cell Phone</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.CellPhone" class="form-control" placeholder="Cell Phone">

                <span asp-validation-for="Contact.CellPhone" class="text-danger"></span>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Email</label>

              <div class="col-sm-10">
                <input type="text" asp-for="Contact.Email" class="form-control" placeholder="Email">

                <span asp-validation-for="Contact.Email" class="text-danger"></span>

              </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group  row">
              <label class="col-sm-2 col-form-label">Contact Type</label>

              <div class="col-sm-10">
                <select asp-for="Contact.ContactType" class="form-control m-b"
                        asp-items="@(new SelectList(Model.ContactTypes,"ID","Description"))">
                  <option>Please select one</option>
                </select>

              </div>
            </div>

            <div class="hr-line-dashed"></div>
                     
            <div class="form-group row" style="text-align:right">
              <div class="col-sm-12 col-sm-offset-2">
                <button class="btn btn-white btn-sm" type="submit" name="btnCancel">Cancel</button>

                <button class="btn btn-white btn-sm" type="submit" name="btnReset">Reset</button>

                <button class="btn btn-primary btn-sm" type="submit" name="btnSave">Save changes</button>

              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


@section Styles {
  <link rel="stylesheet" href="~/lib/iCheck/custom.css" />
}

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
  <environment names="Development,Staging,Productio">
    <script src="~/lib/iCheck/icheck.min.js"></script>
  </environment>

  <script type="text/javascript">
    $(document).ready(function () {

      $('.i-checks').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
      });

    });
  </script>
}


