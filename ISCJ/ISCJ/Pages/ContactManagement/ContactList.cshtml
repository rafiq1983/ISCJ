@page
@model ISCJ.Pages.ContactManagement.ContactListModel
@{
    ViewData["Title"] = "ContactList";
}
<form method="post">
  <h2>ContactList</h2>

  <table class="table-bordered" border="0">
    <thead>
      <tr>
        <th>
          First Name
        </th>
        <th>
          Last Name
        </th>

        <th>
          Email
        </th>
        <th>
          Home Phone
        </th>
        <th>
          Cell Phone
        </th>

        <th>
          Street
        </th>
        <th>
          City
        </th>
        <th>
          State
        </th>

        <th>
          Zip
        </th>
        <th>

        </th>

      </tr>
    </thead>
    <tbody>
      @for (var i = 0; i < Model.Contacts.Count; i++)
      {
        <tr>
          <td>@Model.Contacts[i].FirstName</td>
          <td>@Model.Contacts[i].LastName</td>
          <td>@Model.Contacts[i].Email</td>
          <td>@Model.Contacts[i].HomePhone</td>
          <td>@Model.Contacts[i].CellPhone</td>
          <td>@Model.Contacts[i].Street</td>
          <td>@Model.Contacts[i].City</td>
          <td>@Model.Contacts[i].State</td>
          <td>@Model.Contacts[i].Zip</td>
          <td>
            <input type="submit" class="btn-sm btn-success" value="Details" name="btnDetails" onClick="return SetContactId(@Model.Contacts[i].Id);" />
          </td>
        </tr>
      }


    </tbody>

  </table>
  <div>
    <input type="button" class="btn-sm btn-success" value="Add New" />
  </div>
  <input type="hidden" id="contactId" name="contactId" value="a" />

</form>

<script language="javascript">
  function SetContactId(contactId) {
   
    $("#contactId").val(contactId);
    
    return true;
  }
</script>
