@page
@model ISCJ.Pages.ContactManagement.ContactsModel

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-9">
    <h2>Contacts</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
      </li>
      <li class="breadcrumb-item">
       Contact Management
      </li>
      <li class="active breadcrumb-item">
        <strong>Contacts</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    @for (var i = 0; i < Model.Contacts.Count; i++)
    {
      <div class="col-lg-4">
        <div class="contact-box">
          <a class="row" href="@Url.Action("Profile", "AppViews")">
            <div class="col-4">
              <div class="text-center">
                <img alt="image" class="rounded-circle m-t-xs img-fluid" src="~/Images/img.jpg">
                <div class="m-t-xs font-bold">
                  <Code code-type="contacttype" code="@Model.Contacts[i].ContactType"></Code>
                </div>
              </div>
            </div>
            <div class="col-8">
              <h3><strong>@Model.Contacts[i].FirstName</strong></h3>
              <p><i class="fa fa-map-marker"></i> Riviera State 32/106</p>
              <address>
                <strong>Twitter, Inc.</strong><br>
                795 Folsom Ave, Suite 600<br>
                San Francisco, CA 94107<br>
                <abbr title="Phone">P:</abbr> (123) 456-7890
              </address>
            </div>
          </a>
        </div>
      </div>
    }
  </div>
    </div>
  


