@page
@model PaymentsModel
@{
}
@{
  ViewData["Title"] = "Contacts";
  Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}
<style>
    .validation-summary-valid {
        display: none;
    }
</style>

<div asp-validation-summary="All" >
    <span>Please correct the following errors</span>
</div>
<form method="POST" name="InvoiceDisplay">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Payments</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    Financials
                </li>
                <li class="active breadcrumb-item">
                    <strong>Payments</strong>
                </li>
            </ol>
        </div>
    </div>
    
    <div class="ibox-content">
       
    
        <table class="table">
        <thead>
            <tr>
                <th>Made By</th>
                <th>Payment Date</th>
                <th>Payment Method</th>
                <th>Payment Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.PageData.RowData.Count; i++)
        {
            <tr>
                <input type="hidden" asp-for="@Model.PageData.RowData[i].PaymentId" value="@Model.PageData.RowData[i].PaymentId"/>

                <td>@Model.PageData.RowData[i].PaymentMadeBy</td>
                <td>@Model.PageData.RowData[i].PaymentDate</td>
                <td>@Model.PageData.RowData[i].PaymentMethod</td>
                <td>$@Model.PageData.RowData[i].PaymentAmount</td>
               
                 <td>
                    <a href="#">View Details</a>
                </td>

            </tr>
        }
        </tbody>
    </table>
    </div>
</form>