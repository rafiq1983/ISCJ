@page
@model ISCJ.Pages.School.AddRoomModel
@{
    ViewData["Title"] = "Rooms";
}


@{
    ViewData["Title"] = "Rooms";
    Layout = "~/Pages/Shared/_LayoutModern.cshtml";
}

<form method="POST">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Student Registration</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
                </li>
                <li class="breadcrumb-item">
                    School
                </li>
                <li class="active breadcrumb-item">
                    <strong>Add/Edit Rooms</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-lg-12">


                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Add Class Room</h5>

                    </div>


                    <div class="ibox-content">

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Subject Name:</label>

                            <div class="col-sm-10">
                                <input type="text" placeholder="Subject Name" class="form-control" asp-for="@Model.RoomName" />

                                <span asp-validation-for="@Model.RoomName" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Description:</label>

                            <div class="col-sm-10">
                                <textarea rows="10" style="resize: none;width:100%" asp-for="@Model.RoomDescription">                            
</textarea>

                                <span asp-validation-for="@Model.RoomDescription" class="text-danger"></span>



                            </div>
                        </div>


                        <div class="hr-line-dashed"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group row" style="text-align:right">
                    <div class="col-sm-12 col-sm-offset-2">
                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Cancel">Cancel</button>

                        <button class="btn btn-white btn-sm" type="submit" asp-page-handler="Reset">Reset</button>

                        <button class="btn btn-primary btn-sm" type="submit" asp-page-handler="Save">Save</button>

                    </div>
                    s
                </div>
            </div>
        </div>
    </div>

</form>


